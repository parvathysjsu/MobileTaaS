$( document ).ready(function() {
let dropdown = $('#locality-dropdown');

dropdown.empty();

dropdown.append('<option selected="true" disabled>Choose Project</option>');
dropdown.prop('selectedIndex', 0);

const url = '/getprojects';

// Populate dropdown with list of provinces
$.getJSON(url, function (data) {
  $.each(data, function (key, entry) {
    dropdown.append($('<option></option>').attr('value', entry).text(entry));
  })
});

    });


    //$(this).find('option:selected').attr("name");

function deleteProject(){
  var d = $("#locality-dropdown").find('option:selected').attr("value");
  console.log(d);
  var data = {};
  data.name=d;
  $.ajax({
    url: '/editproject',
    method: 'DELETE',
    data:data,
    // contentType: 'application/json',
    // dataType: "json",
    success: function(result) {
       if(result == "success"){
         alert("Successfully Deleted:" + d); 
         window.location.href = "/projects";
       }
       else {
         alert("Some error occured");
       }
    },
    error: function(request,msg,error) {
        alert("Not able to submit request");
    }
  });
}


$('#locality-dropdown').change( function() {
   $(this).find(":selected").each(function () {
            var url="getproject?name="+ $(this).val();
            $.get(url, function(data, status){

              document.getElementById('project').value = data.name;
              document.getElementById('description').value = data.description;
              document.getElementById('link1').value = data.link1;
              document.getElementById('link2').value = data.link2;
              $('#document').next('.custom-file-document').html(data.document);
              document.getElementById('data').value = data.testdata;
              document.getElementById('case').value = data.testcase;
              console.log(data);
            });
    });
 });


$('#document').on('change',function(){
                //get the file name
                var fileName = $(this).val();
                var t = fileName.split("\\");
                t = t[t.length-1];
                console.log(t);
                //replace the "Choose a file" label
                $(this).next('.custom-file-document').html(t);
            });
            $('#testcase').on('change',function(){
                //get the file name
